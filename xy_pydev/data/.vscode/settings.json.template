{{
    "python.analysis.extraPaths": [
        "./${{workspaceFolderBasename}}"
    ],
    "[python]": {{
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnPaste": false,
    }},
    "python.formatting.provider": "black",
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "python.languageServer": "Pylance",
    "python.linting.pycodestyleEnabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.enabled": false,
    "black-formatter.interpreter": [
        "{python_path}python"
    ],
    "python.analysis.autoFormatStrings": false,
    "python.analysis.addImport.exactMatchOnly": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.enableSyncServer": true,
    "python.analysis.gotoDefinitionInStringLiteral": true,
    "python.analysis.inlayHints.callArgumentNames": false,
    "python.analysis.inlayHints.functionReturnTypes": false,
    "python.analysis.inlayHints.pytestParameters": false,
    "python.analysis.inlayHints.variableTypes": false,
    "python.analysis.pylanceLspClientEnabled": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.enablePytestSupport": true,
    "python.analysis.indexing": true,
    "html.format.wrapAttributesIndentSize": 4,
    "pythonIndent.keepHangingBracketOnLine": true,
    "pythonIndent.useTabOnHangingIndent": true,
    "pythonIndent.trimLinesWithOnlyWhitespace": true,
    "black-formatter.importStrategy": "fromEnvironment",
    "black-formatter.path": [
        "{python_path}black"
    ],
    "editor.formatOnSave": true,
    "notebook.formatOnSave.enabled": true,
    "python.formatting.blackPath": "{python_path}black",
    "vsintellicode.features.python.deepLearning": "default",
    "python.defaultInterpreterPath": "{python_path}python",
    "pylint.interpreter": [
        "{python_path}python"
    ],
    "python.analysis.diagnosticMode": "workspace",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "[json]": {{
        "editor.defaultFormatter": "vscode.json-language-features"
    }},
    "black-formatter.args": [
        "--skip-string-normalization"
    ],
    "python.formatting.blackArgs": [
        "--skip-string-normalization"
    ],
    "python.linting.lintOnSave": false,
    "debug.javascript.autoAttachFilter": "smart",
    "isort.interpreter": [
        "{python_path}python"
    ],
    "editor.defaultFormatter": "ms-python.black-formatter",
}}